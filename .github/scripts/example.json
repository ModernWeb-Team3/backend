{
  "spring": {
    "application": {
      "name": "unideal"
    },
    "datasource": {
      "url": "jdbc:mysql://db:3306/unideal",
      "username": "unideal",
      "password": "unideal",
      "driver-class-name": "com.mysql.cj.jdbc.Driver"
    },
    "jpa": {
      "hibernate": {
        "ddl-auto": "update"
      },
      "show-sql": true
    },
    "mail": {
      "host": "smtp.gmail.com",
      "port": 587,
      "username": "example@gmail.com",
      "password": "stub-password",
      "properties": {
        "mail": {
          "smtp": {
            "auth": true,
            "starttls": {
              "enable": true,
              "required": true
            },
            "connectiontimeout": 5000,
            "timeout": 5000,
            "writetimeout": 5000
          }
        }
      }
    },
    "data": {
      "redis": {
        "host": "redis",
        "port": 6379
      }
    }
  },
  "jwt": {
    "token": {
      "secretKey": "stub-secret"
    },
    "refresh": {
      "expiration": 604800000
    }
  },
  "springdoc": {
    "api-docs": {
      "path": "/v3/api-docs"
    }
  },
  "unideal": {
    "mailer": {
      "from": "example@unideal.kr"
    }
  }
}